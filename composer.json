{
    "name": "fof/frontpage",
    "description": "Push discussions to the front of your Flarum forum index!",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/FriendsOfFlarum/frontpage/issues",
        "source": "https://github.com/FriendsOfFlarum/frontpage",
        "forum": "https://discuss.flarum.org/d/19256"
    },
    "homepage": "https://friendsofflarum.org",
    "funding": [
        {
            "type": "website",
            "url": "https://opencollective.com/fof/donate"
        }
    ],
    "require": {
        "flarum/core": "^1.0",
        "flarum/sticky": "*",
        "fof/gamification": "^1.0"
    },
    "authors": [
        {
            "name": "Christian Lopez",
            "email": "Christian.L@redevs.org",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "FoF\\FrontPage\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "FoF FrontPage",
            "category": "feature",
            "icon": {
                "name": "fas fa-home",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/19256"
        }
    }
}
